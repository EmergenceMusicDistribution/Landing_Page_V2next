generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

model NewArtist {
  id            Int      @id @default(autoincrement())
  firstName     String
  lastName      String
  age           String
  dateOfBirth   String
  location      String
  email         String   @unique
  phoneNumber   String   @db.VarChar(30) 
  language      String
  artistName    String
  musicGenre    String
  spotifyLink   String
  instagramLink String
  createdAt     DateTime @default(now())
}

model EmdArtist {
  id            Int      @id @default(autoincrement())
  firstName     String
  lastName      String
  location      String
  email         String   @unique
  phoneNumber   String  @db.VarChar(30)
  artistName    String
  musicGenre    String
  spotifyLink   String
  instagramLink String
  createdAt     DateTime @default(now())
}
